<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NovelReading.MainPage">

    <VerticalStackLayout>
        <Label x:Name="Label"/>
        <ProgressBar x:Name="MyProgress" Progress="0" />
        <StackLayout WidthRequest="0" HeightRequest="0" >
            <toolkit:MediaElement
                x:Name="MediaElementAudio"
                Source="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
                PositionChanged="MediaElementAudio_OnPositionChanged"
                ShouldShowPlaybackControls="True" 
                MediaHeight="0"
                MediaWidth="0" />
        </StackLayout>
        <HorizontalStackLayout>
            <Button 
                Text="Back 10s"
                WidthRequest="100"
                Clicked="ButtonBack_OnClicked"/>
            <Button 
                Text="Start"
                WidthRequest="100"
                Clicked="ButtonStart_OnClicked"/>
            <Button 
                Text="Pause"
                WidthRequest="100"
                Clicked="ButtonPause_OnClicked"/>
            <Button 
                Text="Next 10s"
                WidthRequest="100"
                Clicked="ButtonNext_OnClicked"/>
        </HorizontalStackLayout>

